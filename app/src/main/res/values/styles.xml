<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/mySecondColor</item>
        <item name="colorAccent">@color/myThirdColor</item>
    </style>

<style name="text_margin">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:textColor">@color/myThirdColor</item>
    <item name="android:paddingRight">16dp</item>
</style>
    <style name="text_color_second">
        <item name="android:textColor">@color/mySecondColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_main_style">
        <item name="android:textColor">@color/myThirdColor</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
