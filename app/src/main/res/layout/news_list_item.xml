<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/myFourthColor"
    android:maxHeight="72dp"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">


    <LinearLayout
        style="@style/text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_tv"
            style="@style/text_color_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Walk and observe wherever you are" />

        <TextView
            android:id="@+id/author_tv"
            style="@style/text_color_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            tools:text="J. Olivier" />

        <TextView
            android:id="@+id/month_tv"
            style="@style/text_color_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            tools:text="January 29" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        style="@style/text_main_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Title is here so there is a lot of text and we would like to now how it all works out and behave" />

</LinearLayout>